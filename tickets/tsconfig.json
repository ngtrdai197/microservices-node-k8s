{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "types": [
      "node"
    ],
    "baseUrl": "./src",
    "paths": {
      "@dnt-ticketing-mvc/common": [
        "shared"
      ],
      "@internal/event": [
        "events"
      ],
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}